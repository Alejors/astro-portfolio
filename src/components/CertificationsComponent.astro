---
import RightArrow from "./icons/RightArrow.astro"

const CERTIFICATIONS = Astro.props.certifications
---

{
  CERTIFICATIONS.map(({ title, foundation, description, pdf, link }) => (
    <article>
      <h3 class="text-2xl lg:text-4xl">{title} - <strong>{foundation}</strong></h3>
      <p class="text-pretty my-2">{description}</p>
      <ul class="my-2 lg:my-4 flex justify-between">
        {pdf && (
            <li>
                <a
                href={pdf}
                class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
                >
                    Ver el certificado{" "}
                    <RightArrow />
                </a>
            </li>
        )}
        {link && (
            <a
            href={link}
            class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
            >
            Ver m√°s de este curso{" "}
            <svg
                class="w-3 h-3 ms-2 rtl:rotate-180"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 14 10"
            >
                <path
                stroke="currentColor"
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M1 5h12m0 0L9 1m4 4L9 9"
                />
            </svg>
            </a>
        )}
      </ul>
      <hr class="my-6"/>
    </article>
  ))
}
