---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "@components/icons/Linkedin.astro";
import SocialPill from "@components/SocialPill.astro";
import Github from "@components/icons/Github.astro";
import Gmail from "@components/icons/Gmail.astro";
import Experience from "@components/Experience.astro";
import SectionContainer from "@components/SectionContainer.astro"
import Briefcase from "@components/icons/Briefcase.astro";
import Filetext from "@components/icons/Filetext.astro";
import CertificationsComponent from "@components/CertificationsComponent.astro";
import RightArrow from "@components/icons/RightArrow.astro";

const CERTIFICATIONS = [
  {
    title: "Full Stack Developer",
    foundation: "4Geeks Academy Chile",
    pdf: "https://drive.google.com/file/d/1Cysd7ahUa-2RbHp7ZbJjLDaGgzZ1EyVv/view?usp=drive_link"
  },
  {
    title: "CS50x",
    foundation: "CS50, Harvard University",
    pdf: "https://drive.google.com/file/d/1VZ8YTYuqaegy9CWzwoYKX__yhSimEISr/view?usp=drive_link"
  },
  {
    title: "English C2 (Proficient)",
    foundation: "EF Set",
    pdf: "https://drive.google.com/file/d/1TMIBrQKp0z328eAydnyTqLbEe6Diqho4/view?usp=drive_link",
  }
];
---

<Layout title="Portfolio Alejandro Atria - Desarrollador y Programador Web" description="Información Profesional de Alejandro Atria. Te puede interesar para contratarlo.">
  <SectionContainer class="pt-6 lg:pt-44 pb-4 lg:pb-24">
    <h1 class="text-white text-2xl md:text-4xl xl:text-5xl font-bold lg:flex lg:flex-row gap-x-4 pb-4 lg:pb-10">
      <img
        class="rounded-full size-12"
        src="https://avatars.githubusercontent.com/u/83140661?v=4"
        alt="portfolio logo"
      />Hola, soy Alejandro! <div class="flex justify-center items-center">
        <a href="/about"><Badge>Más información sobre mí!</Badge></a
        >
      </div>
    </h1>
    <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
      <span>+3 años de experiencia.</span><span class="text-green-200/90"> Desarrollador Full Stack.</span> De Santiago, Chile 🇨🇱;
      actualmente viviendo en Guayaquil, Ecuador 🇪🇨. <span class="text-yellow-100/80">He trabajado desde etapas
      tempranas con cloud computing en AWS y GCP.</span>
    </h2>
  </SectionContainer>
  <SectionContainer id="experiencia" class="pb-4 lg:pb-24 scroll-mt-24">
    <h2 class="flex gap-x-2 items-center text-3xl font-semibold mb-6">
      <Briefcase class="size-6"/>
      Experiencia Laboral
    </h2>
    <Experience />
  </SectionContainer>
  <SectionContainer id="certificaciones" class="pb-4 lg:pb-24 scroll-mt-24">
    <h2 class="flex gap-x-2 items-center text-3xl font-semibold mb-6">
      <Filetext class="size-6" />
      Principales Certificaciones
      <a href="/certifications">
      <Badge>
        Ver Todas
      </Badge> 
    </a>
    </h2>
    <CertificationsComponent certifications={CERTIFICATIONS} />
  </SectionContainer>
  <SectionContainer id="contacto" class="pb-4 lg:pb-24 scroll-mt-24">
    <h2 class="flex gap-x-2 items-center text-3xl font-semibold mb-6">
      Contáctame
    </h2>
    <nav class="flex gap-x-4 my-2">
      <SocialPill href="https://www.linkedin.com/in/alejandroatria">
        <Linkedin class="size-3 lg:size-6" />
        LinkedIn
      </SocialPill>
      <SocialPill href="https://www.github.com/Alejors">
        <Github class="size-3 lg:size-6" />
        Github
      </SocialPill>
      <SocialPill href="mailto:alejoatria@gmail.com">
        <Gmail class="size-3 lg:size-6" />
        Gmail
      </SocialPill>
    </nav>
  </SectionContainer>
</Layout>
